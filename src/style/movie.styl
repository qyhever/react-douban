.movie-wrapper
  height: 100%
  display: flex
  .movie-menu
    width: 100px
    display: flex
    flex-direction: column
    border-right: 1px solid #eee
    a
      padding: 8px 0
      border: 1px solid #eee
      background-color: #f5f5f5
      text-align: center
      color: #3c3c3c
      &:active
        color: #f00
  .movie-main
    flex: 1
    .movie-search
      height: 40px
      background-color: #f2f2f2
      display: flex
      justify-content: center
      align-items: center
      .search-bar
        height: 30px
        border: 1px solid #ccc
        border-radius: 15px 0 0 15px
        text-indent: 1.5em
      .search-btn
        width: 60px
        height: 30px
        background-color: #26A2FF
        border: none;
        border-radius: 0 15px 15px 0
        color: #fff
    .movie-content
      height: calc(100% - 40px)